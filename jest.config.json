{
  "setupFiles": [
    "raf/polyfill",
    "<rootDir>/client/test/setupTests.js"
  ],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/"
  ],
  "collectCoverageFrom": [
    "client/src/**/*.{jsx}",
    "client/src/**/*.{js}",
    "!**/client/src/utils/**",
    "!**/client/src/app.jsx",
    "!**/client/src/store/configureStore.js",
    "!**/index.js"
  ],
  "moduleNameMapper": {
    "\\.(gif|ttf|eot|svg|png|jpg|jpeg|css|sass|scss)$": "<rootDir>./client/test/__mocks__/fileMock.js"
  }
}